{
  "name": "guvenli_uygulama",
  "version": "5.1.4",
  "description": "Güvenli Windows Uygulama Yükleyicisi",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "release": "electron-builder --publish always",
    "release:draft": "electron-builder --publish onTagOrDraft",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "winget",
    "installer",
    "windows",
    "electron"
  ],
  "author": "Antigravity",
  "license": "ISC",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/aykuttepe/guvenli_uygulama.git"
  },
  "devDependencies": {
    "electron": "^39.2.4",
    "electron-builder": "23.6.0"
  },
  "build": {
    "appId": "com.guvenli.yukleyici",
    "productName": "Güvenli Yükleyici",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "logger.js",
      "package.json"
    ],
    "publish": {
      "provider": "github",
      "owner": "aykuttepe",
      "repo": "guvenli_uygulama",
      "releaseType": "release"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "appx",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "publisherName": "CN=716AD3A6-3CB8-49AE-8D45-B3873C4A2D32"
    },
    "appx": {
      "applicationId": "GvenliYkleyici",
      "identityName": "splendor.GvenliYkleyici",
      "publisher": "CN=716AD3A6-3CB8-49AE-8D45-B3873C4A2D32",
      "publisherDisplayName": "splendor",
      "displayName": "Güvenli Yükleyici",
      "backgroundColor": "#1976D2",
      "showNameOnTiles": true,
      "languages": [
        "tr-TR",
        "en-US"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "include": "installer.nsh"
    },
    "msi": {
      "oneClick": false,
      "createDesktopShortcut": true
    }
  },
  "dependencies": {
    "@sentry/electron": "^7.5.0",
    "electron-updater": "^6.7.3"
  }
}